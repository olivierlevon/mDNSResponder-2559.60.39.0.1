{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: build with make",
			"command": "make",
			"args": [
				"-B",
				"os=linux",
				"DEBUG=1",
				"setup",
				"Daemon"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: make"
		}
	]
}